{
  "name": "cave-app-base-server",
  "version": "0.2.1",
  "description": "",
  "scripts": {
    "dev": "npm-run-all dev:build --parallel dev:run dev:watch ",
    "dev:build": "parcel build --target=node src/index.js --no-autoinstall",
    "dev:watch": "parcel --target=node src/index.js --no-autoinstall",
    "dev:run": "nodemon dist/index.js",
    "build": "parcel build --target=node src/index.js --no-autoinstall",
    "start": "NODE_ENV=production node dist/index.js",
    "populate": "node -r esm ./src/populateDefaultData.js"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "byline": "^5.0.0",
    "dotenv": "^8.1.0",
    "execa": "^0.10.0",
    "express": "^4.16.3",
    "fs-extra": "^8.0.1",
    "log-file-db": "^0.1.2",
    "ramda": "^0.26.1",
    "server-fx": "^0.0.14",
    "socket.io": "^2.1.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "esm": "^3.0.84",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.5",
    "parcel": "1.12.3",
    "prettier": "1.15.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --no-semi --write"
    ]
  }
}
